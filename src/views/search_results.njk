{% extends "layout.njk" %}

{% set pageId = "page_search_results" %}

{% block title %}
    <title>Resultado da Pesquisa</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="styles/search_results.css">
{% endblock styles %}

{% block content %}
    {% include "partials/page_header.njk" %}

    <main>

        {% if total > 0 %}

            <h4>
                <strong>{{total}}</strong>
                encontrados
            </h4>

            <div class="cards">

                {%for place in places%}

                    <div class="card">
                    <img src="{{place.image}}" alt="{{place.name}}" srcset="">
                    <h1>{{place.name}}</h1>
                    <h3>{{place.items}}</h3>

                    <p>
                        {{place.city}}, {{place.state}}<br/>{{place.addres}}<br/>{{place.addres2}}
                    </p>

                </div>


                {% endfor %}

            </div>

        {% else %}
            <h4><strong>Nenhum</strong> local encontrado</h4>

        {% endif %}


    </main>
{% endblock content %}