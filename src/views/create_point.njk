{% extends "layout.njk" %}

{% set pageId = "page_create_point" %}

{% block title %}
    <title>Criar um ponto de coleta</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="styles/create_point.css">
    <link rel="stylesheet" href="styles/modal.css">

{% endblock styles %}

{% block content %}
    {% include "partials/page_header.njk" %}

    <form action="/savepoint" method="POST">

        <h1>Cadastro do ponto de coleta</h1>

        <fieldset>
            <legend>
                <h2>Dados da entidade</h2>
            </legend>
            <div class="field_group">
                <div class="field">
                    <label for="name">Nome da entidade</label>
                    <input type="text" name="name" required="required">
                </div>
                <div class="field">
                    <label for="name">Imagem da entidade</label>
                    <input type="url" name="image" required="required" placeholder="http://">
                </div>
            
            </div>

            <div class="field_group">

                <div class="field">
                    <label for="addres">Endereço</label>
                    <input type="text" name="addres" required="required">
                </div>

                <div class="field">
                    <label for="addres2">Número/complemento</label>
                    <input type="text" name="addres2" required="required">
                </div>

            </div>

            <div class="field_group">

                <div class="field">
                    <label for="state">Estado</label>
                    <select name="uf" id="" required="required">
                        <option value="">Selecione o Estado</option>
                    </select>
                    <input type="hidden" name="state">

                </div>

                <div class="field">
                    <label for="city">Cidade</label>
                    <select name="city" id="" disabled="disabled" required="required">
                        <option value="">Selecione a cidade</option>
                    </select>
                </div>

            </div>

        </fieldset>

        <fieldset>
            <legend>
                <h2>Items de coleta</h2>
                <span>Selecione um ou mais item abaixo</span>
            </legend>

            <div class="item_grid">

                <li data-id="Lâmpadas">
                    <img src="/assets/lampadas.svg" alt="Lâmpadas">
                    <span>Lâmpadas</span>
                </li>

                <li data-id="Baterias e pilhas">
                    <img src="/assets/baterias.svg" alt="Pilhas e baterias">
                    <span>Baterias e pilhas</span>
                </li>

                <li data-id="Papéis e Papelão">
                    <img src="/assets/papeis-papelao.svg" alt="Papéis e papelao">
                    <span>Papéis e Papelão</span>
                </li>

                <li data-id="Resíduos eletrônicos">
                    <img src="/assets/eletronicos.svg" alt="Resíduos Eletrônicos">
                    <span>Resíduos eletrônicos</span>
                </li>

                <li data-id="Resíduos Orgânicos">
                    <img src="/assets/organicos.svg" alt="Resíduos Orgânicos">
                    <span>Resíduos Orgânicos</span>
                </li>

                <li data-id="Óleo de cozinha">
                    <img src="/assets/oleo.svg" alt="Óleo de cozinha">
                    <span>Óleo de cozinha</span>
                </li>

            </div>

            <input type="hidden" name="items">

        </fieldset>

        <button type="submit">Cadastrar ponto de coleta</button>

    </form>

{% endblock content %}

{% block modal %}
    {% if saved %}
        {% include "partials/point_created.njk" %}   
    {% endif %}
{% endblock modal %}


{% block scripts %}
    <script src="/scripts/create_point.js"></script>
{% endblock scripts %}  
